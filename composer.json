{
    "name": "happyDemon/swoole-echo",
    "type": "library",
    "description": "Create your own echo-compatible socket server",
    "keywords": [
        "happydemon",
        "swoole",
        "echo",
        "websocket"
    ],
    "homepage": "https://github.com/happyDemon/swoole-echo",
    "license": "MIT",
    "authors": [
        {
            "name": "Maxim Kerstens",
            "email": "maxim.kerstens@gmail.com",
            "homepage": "https://github.com/happyDemon",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "HappyDemon\\SwooleEcho\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HappyDemon\\SwooleEcho\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
